<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/chat_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chat_avatar"
        android:layout_marginStart="10dp"
        android:text="Contact Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chat_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chat_avatar"
        android:layout_below="@id/chat_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text="This was the last message"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/chat_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/chat_name"
        android:text="10:00 AM"
        android:textSize="12sp" />

</RelativeLayout>